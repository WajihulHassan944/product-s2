<script>
const images = [
  "https://i.ibb.co/37pk3zv/EDA16678-AE73-4-C64-945-D-E97-D64438-E05-removebg-preview.png",
  "https://i.ibb.co/RjJ5BD2/3452-B46-C-8361-4-ED5-B183-EB0-FAB689-E03-removebg-preview.png",
  "https://i.ibb.co/tP1mLfD/4-CEB08-E1-1456-4-EA6-8-A91-FD58-FE4379-D1-removebg-preview.png",
  "https://i.ibb.co/JngV4sJ/B8-A4964-B-7-DF0-4-FD9-9169-41650-F049-E01-removebg-preview-1.png",
  
];
const orderButtons = document.querySelectorAll(".orderButton"); // Select all Buy Product buttons

 orderButtons.forEach((button, i) => {
    button.setAttribute("data-product", `T-shirt ${i + 1}`);
  });

const sliderImage = document.getElementById("sliderImage");
const prevButton = document.getElementById("prevButton");
const nextButton = document.getElementById("nextButton");
const h4Element = document.querySelector("#dynamich4"); // Select the h4 element

let currentImageIndex = 0;

function showImage(index) {
  sliderImage.src = images[index];
   if (index === images.length - 1) {
    h4Element.textContent = "Hoodie";
  } else {
    h4Element.textContent = "T-shirt";
  }
}

prevButton.addEventListener("click", () => {
  currentImageIndex = (currentImageIndex - 1 + images.length) % images.length;
  showImage(currentImageIndex);
});

nextButton.addEventListener("click", () => {
  currentImageIndex = (currentImageIndex + 1) % images.length;
  showImage(currentImageIndex);
});

showImage(currentImageIndex);
</script>


